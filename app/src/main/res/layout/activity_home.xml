<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_profile"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:src="@drawable/logo_crop"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/architects_daughter"
            android:textStyle="bold"
            android:text=""
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:background="#fff"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/service_vehicles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:tooltipText="YOUR BENDING SERVICES"
            android:src="@drawable/bending_work" />

        <ImageView
            android:id="@+id/job_carded_vehicles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:tooltipText="JOB CARDED VEHICLES"
            android:src="@drawable/job_carded_vehicles"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/offers"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:tooltipText="ADD/DELETE OFFERS"
            android:src="@drawable/give_offers"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:background="#fff"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reviews"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:tooltipText="USER REVIEWS"
            android:src="@drawable/user_rating"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/billed_vehicles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:tooltipText="YOUR OLD SERVICES"
            android:src="@drawable/repair_history" />

        <ImageView
            android:id="@+id/chat"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:tooltipText="CHAT WITH THE USERS HERE"
            android:src="@drawable/chat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:weightSum="3"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/view_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mech_user"
            android:tooltipText="YOUR PROFILE"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/photos"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:tooltipText="YOUR STORE PHOTOS"
            android:src="@drawable/image" />

        <ImageView
            android:id="@+id/prices"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:tooltipText="Add your service costs here"
            android:src="@drawable/mech_price" />

    </LinearLayout>
        <ImageView
            android:id="@+id/shop_status"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="invisible"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/textview"
            android:text="LOGOUT"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>
</ScrollView>







