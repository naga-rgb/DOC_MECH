<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bike_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:text="BIKE NO."
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Owner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:text="OWNER"
            android:textAlignment="center"
            android:textSize="20dp" />



        <TextView
            android:id="@+id/Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:text="Phone"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:text="Email"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/kms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:text="kms"
            android:textAlignment="center"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#000000"
            android:text="Date"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:text="Bike Location"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="shop_name"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Service_List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:text="SERVICE LIST"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/general_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:text="general service"
            android:visibility="gone"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/premium_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:text="premium services"
            android:visibility="gone"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/engine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:text="engine"
            android:visibility="gone"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/suspension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:text="suspension"
            android:visibility="gone"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/electrical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:text="electrical"
            android:visibility="gone"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:text="others"
            android:visibility="gone"
            android:textAlignment="center"
            android:textSize="20dp" />
        <Button
            android:id="@+id/add_job_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#000000"
            android:text="Add job card"
            android:background="@drawable/rounded_button"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>